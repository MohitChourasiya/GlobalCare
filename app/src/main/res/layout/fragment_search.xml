<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

    -<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginEnd="43dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="34dp">

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:src="@drawable/left_arrow"
        android:id="@+id/error_arrow"/>
    <RelativeLayout
        android:id="@+id/search_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/error_arrow"
        android:background="@drawable/forgotbtn_round">

        <EditText
            android:id="@+id/search_txt"
            android:layout_width="323dp"
            android:layout_height="45dp"
            android:layout_marginEnd="43dp"
            android:layout_toRightOf="@+id/img_search"
            android:fontFamily="@font/inter_regular"
            android:hint="Jenny"
            android:textColorHint="#000000" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/magnifying" />
    </RelativeLayout>
</RelativeLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/doctorTypeRv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="horizontal"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="216sp"
                android:layout_height="wrap_content"
                android:text="118 Resultados encontrados"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="13dp"
                android:layout_marginStart="24dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/updownarow"
                android:layout_marginEnd="46dp"/>
        </RelativeLayout>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/searchDocProfileRv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>