<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Signup">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="250dp"
                android:layout_height="93dp"
                android:layout_marginTop="130dp"
                android:src="@drawable/global_care_logo"
                android:layout_gravity="center"
                android:layout_marginBottom="84dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear una nueva cuenta"
                android:layout_marginBottom="40dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/montserrat_medium"/>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/register"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/email"
                    android:layout_margin="11dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/im1"
                    android:background="@null"
                    android:hint="Email "
                    android:textColor="#000000"
                    android:textColorHint="#7D7D7D"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/register"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="11dp"

                    android:src="@drawable/padlock" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="19sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/im2"
                    android:background="@null"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#828282"
                    android:textSize="16sp" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="33dp">

                <CheckBox
                    android:id="@+id/cbox"
                    android:buttonTint="@color/black"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cbox"
                    android:text="Al registrarse, acepta nuestros Términos, /nPolítica de datos y política de privacidad"
                    android:textSize="12sp"
                    android:textColor="#686868"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/reg_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/reg_btn_round">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semi_bold"
                    android:layout_centerInParent="true"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                >


                <TextView
                    android:id="@+id/r_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="177dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="¿Ya tienes una cuenta?"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/l_text_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="177dp"
                    android:layout_toRightOf="@+id/r_text"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Iniciar sesión"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    />



            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>