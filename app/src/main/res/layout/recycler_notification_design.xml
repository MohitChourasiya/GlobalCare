<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">





    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="27dp"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/image_holder">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/img_background"
        android:background="@drawable/ellipse"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp" android:id="@+id/img_centre"
        android:background="@drawable/xbtn"
        android:layout_centerInParent="true"/>

</RelativeLayout>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="21dp"
        android:id="@+id/txt_head"
        android:layout_toRightOf="@+id/image_holder"
        android:textColor="#000000"
        android:text="Cita Cancelada"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/image_holder"
            android:text="Este Dia"
            android:textSize="14sp" />

    <TextView
        android:layout_height="20dp"
        android:layout_width="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:id="@+id/txt_line"
        android:background="@drawable/line"
        android:layout_toRightOf="@+id/txt_head2"
        android:textColor="#000000"
        android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/txt_head2"
            android:text="02:45 PM"
            android:textSize="14sp" />

    <TextView
        android:layout_height="34dp"
        android:layout_width="363sp"
        android:id="@+id/txt_desc"
        android:text="Ha cancelado con Ã©xito su cita con el Dr. John el 12 de septiembre de 2022"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>




</RelativeLayout>