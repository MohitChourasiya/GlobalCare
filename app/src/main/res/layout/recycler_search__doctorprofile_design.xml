<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal">



    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="4dp"
        android:outlineSpotShadowColor="#000000"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_doctor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/doctor"

                />
            <TextView
                android:id="@+id/txt_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Jenny Watson"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/img_doctor"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/line_vert"
                android:layout_width="1dp"
                android:layout_height="27dp"
                android:background="@drawable/line"
                android:layout_toRightOf="@+id/txt_disc"
                android:layout_marginTop="53dp"
                android:layout_marginStart="10dp"/>



            <TextView
                android:id="@+id/txt_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="44dp"
                android:layout_toRightOf="@+id/img_doctor"
                android:text="Cardiólogo"
                android:textColor="#000000"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_disc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="44dp"
                android:layout_toRightOf="@+id/line_vert"
                android:text="Hospital Ángeles"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/ratingstr"

                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="1"
                android:rating="1"
                android:scaleX=".6"
                android:scaleY=".6"
                android:layout_toRightOf="@+id/img_doctor"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:theme="@style/MyRatingBar"/>

            <TextView
                android:id="@+id/ratingNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/ratingstr"
                android:text="4.8"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginBottom="45dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/ratingVotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/ratingNum"
                android:text="(2186 Reseñas)"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginBottom="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>