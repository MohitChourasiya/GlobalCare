<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile_info_page">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/reg_btn_round"
            android:layout_gravity="end"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SKIP"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:gravity="center"/>
        </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Complete su perfil"
    android:fontFamily="@font/inter_semi_bold"
    android:textSize="24sp"
    android:textColor="#000000"
    android:layout_marginStart="44dp"
    android:layout_marginBottom="45dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_logo"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginBottom="45dp"
                android:src="@drawable/user" />
            <ImageView
                android:id="@+id/edit_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/edit"
                android:layout_alignEnd="@+id/profile_logo"
                android:layout_alignBottom="@+id/profile_logo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/profile_edit_info_page">

        
        <EditText
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="text"
            android:textColor="#7D7D7D"
            android:textSize="18sp"
            android:background="@null"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_regular"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/profile_edit_info_page">


            <EditText
                android:id="@+id/calender_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:background="@null"
                android:fontFamily="@font/inter_regular"
                android:hint="Fecha de nacimiento"
                android:textColor="#7D7D7D"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/calender_txt"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/calendar" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/profile_edit_info_page">


            <EditText
                android:background="@null"
                android:id="@+id/down_aro"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Género"
                android:inputType="text"
                android:textColor="#7D7D7D"
                android:textSize="18sp"
                android:layout_marginStart="11dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/down_aro"
                android:src="@drawable/down_arrow"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/profile_edit_info_page">


            <EditText
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de teléfono móvil"
                android:textColor="#7D7D7D"
                android:textSize="18sp"
                android:inputType="number"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/inter_regular"/>/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/profile_edit_info_page">


            <EditText
               android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:background="@null"
                android:inputType="text"
                android:textColor="#7D7D7D"
                android:textSize="18sp"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/inter_regular"/>/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo sanguíneo"
            android:fontFamily="@font/inter_regular"
            android:textColor="#555555"
            android:layout_marginStart="46dp"
            android:layout_marginBottom="10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"

            >

<EditText
    android:id="@+id/height"
    android:layout_width="156dp"
    android:layout_height="45dp"
    android:background="@drawable/profile_edit_info_page"
    android:hint="Height ( in cms )"
    android:textSize="14sp"
    android:textColorHint="#7D7D7D"
    android:fontFamily="@font/inter_regular"
    android:inputType="number"
    android:layout_marginEnd="30dp"
    android:textAlignment="center"/>

            <EditText
                android:id="@+id/weight"
                android:textAlignment="center"
                android:layout_width="156dp"
                android:layout_height="45dp"
                android:background="@drawable/profile_edit_info_page"
                android:hint="Weight ( in kg )"
                android:textSize="14sp"
                android:textColorHint="#7D7D7D"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:layout_toRightOf="@+id/height"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="47dp"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/reg_btn_round"
            android:layout_gravity="center"
            android:layout_marginBottom="46dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ahorrar"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

 </LinearLayout>
</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>