<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="93dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/global_care_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese a su cuenta"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="39dp"
            android:fontFamily="@font/inter_semi_bold"
            />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/register"
            >
            <ImageView
                android:id="@+id/img_login"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/email"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:background="@null"
                android:hint="Email"
                android:layout_toRightOf="@+id/img_login"
                android:textColorHint="#828282"
                android:inputType="textEmailAddress"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/register"
            android:layout_marginBottom="12dp"
            >
            <ImageView
                android:id="@+id/img_login1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/padlock"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:hint="Contraseña"
                android:background="@null"
                android:layout_toRightOf="@+id/img_login1"
                android:textColorHint="#828282"
                android:inputType="textPassword" />

        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_txt_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Has olvidado tu contraseña"
            android:gravity="end"
            android:layout_marginEnd="63dp"
            android:layout_marginBottom="45dp"/>

        <LinearLayout
            android:id="@+id/Login_main_btn"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/reg_btn_round">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_semi_bold"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"
            >


            <TextView
                android:id="@+id/r_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="177dp"
                android:text="¿No tienes una cuenta?"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/montserrat_regular"
                />
            <TextView
                android:id="@+id/R_text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="177dp"
                android:text=" Registro"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@+id/r_text"
                android:fontFamily="@font/inter_semi_bold"


                />



        </RelativeLayout>









    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>